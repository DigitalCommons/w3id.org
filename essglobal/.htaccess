# Turn off MultiViews
Options -MultiViews +FollowSymLinks

# Directive to ensure *.rdf files served as appropriate content type,
# if not present in main apache config
AddType application/rdf+xml .rdf

# Rewrite engine setup
RewriteEngine On

# Redirect https://w3id.org/essglobal/whatever to the appropriate index,
# e.g. https://vocabs.solidarityeconomy.coop/essglobal/whatever/index.html 

# content negotiation depending on the HTTP Accept header:
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^([^/]+)/?$ https://vocabs.solidarityeconomy.coop/essglobal/$1/index.html [R=303,L]

RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^([^/]+)/?$ https://vocabs.solidarityeconomy.coop/essglobal/$1/index.rdf [R=303,L]

RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^([^/]+)/?$ https://vocabs.solidarityeconomy.coop/essglobal/$1/index.ttl [R=303,L]

# Redirect https://w3id.org/essglobal/whatever/X to the appropriate file on essglobal.solidarityeconomy.coop
# In this case, X will refer to a version of essglobal.
# Content negotiation depending on the HTTP Accept header:
RewriteCond %{HTTP_ACCEPT} !application/rdf\+xml.*(text/html|application/xhtml\+xml)
RewriteCond %{HTTP_ACCEPT} text/html [OR]
RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml [OR]
RewriteCond %{HTTP_USER_AGENT} ^Mozilla/.*
RewriteRule ^(.*)$ https://vocabs.solidarityeconomy.coop/essglobal/$1/ [R=303,L]

RewriteCond %{HTTP_ACCEPT} application/rdf\+xml
RewriteRule ^(.*)$ https://vocabs.solidarityeconomy.coop/essglobal/$1.rdf [R=303,L]

RewriteCond %{HTTP_ACCEPT} text/turtle
RewriteRule ^(.*)$ https://vocabs.solidarityeconomy.coop/essglobal/$1.ttl [R=303,L]

# Default rule. Apparently, some older Linked Data applications assume this default (sigh):
RewriteRule ^(.*)$ https://vocabs.solidarityeconomy.coop/essglobal/$1.rdf [R=303,L]
